<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.VillRiceWearHouseAndroid" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>


    <style name="FontMontserratRegular" >
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="FontMontserratBold" >
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="FontMontserratSemiBold" >
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>
    <style name="FontMontserratMedium" >
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_rounded_primary</item>
        <item name="android:layout_height">@dimen/_34sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorText</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_rounded_gray</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
    </style>

    <style name="EditTextStyleBordered" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_rounded_border_primary</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
    </style>

    <style name="TextViewStyleBordered" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_rounded_border_primary</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
    </style>

    <style name="TextViewStyleRounded" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_rounded_gray</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
    </style>

    <style name="sideMenuTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sideMenuTextHeadingStyle" parent="FontMontserratBold">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeadingStyle" parent="FontMontserratSemiBold">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>